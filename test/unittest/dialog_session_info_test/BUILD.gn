import("//build/test.gni")
import("//foundation/ability/ability_runtime/ability_runtime.gni")

module_output_path = "ability_runtime/ability_test"

ohos_unittest("dialog_session_info_test") {
  module_out_path = module_output_path
  sanitize = {
    cfi = true
    cfi_cross_dso = true
    debug = false
  }
  branch_protector_ret = "pac_ret"

  include_dirs =
      [ "${ability_runtime_path}/interfaces/inner_api/ability_manager/include" ]

  sources = [
    "${ability_runtime_services_path}/abilitymgr/src/dialog_session/dialog_session_info.cpp",
    "dialog_session_info_test.cpp",
  ]

  configs = []

  deps = [
    "${ability_runtime_innerkits_path}/ability_manager:ability_manager",
    "${ability_runtime_native_path}/ability/native:auto_startup_callback",
    "//third_party/googletest:gmock_main",
    "//third_party/googletest:gtest_main",
  ]

  external_deps = [
    "ability_base:base",
    "ability_base:want",
    "c_utils:utils",
    "eventhandler:libeventhandler",
    "hilog:libhilog",
    "ipc:ipc_core",
  ]
}

group("unittest") {
  testonly = true

  deps = [ ":dialog_session_info_test" ]
}
