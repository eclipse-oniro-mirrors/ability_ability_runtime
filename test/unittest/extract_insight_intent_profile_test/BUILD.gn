import("//build/test.gni")
import("//foundation/ability/ability_runtime/ability_runtime.gni")

module_output_path = "ability_runtime/ability_runtime/abilitymgr"

ohos_unittest("extract_insight_intent_profile_test") {
  sanitize = {
    cfi = true
    cfi_cross_dso = true
    debug = false
    blocklist = "../../cfi_blocklist.txt"
  }
  module_out_path = module_output_path

  include_dirs = [
    "${ability_runtime_abilitymgr_path}/include",
    "${ability_runtime_abilitymgr_path}/src",
    "${ability_runtime_services_path}/abilitymgr:abilityms",
  ]

  sources = [ "extract_insight_intent_profile_test.cpp" ]

  deps = [ "${ability_runtime_abilitymgr_path}/:abilityms" ]

  external_deps = [
    "ability_base:want",
    "ability_base:zuri",
    "ability_runtime:ability_manager",
    "access_token:libaccesstoken_sdk",
    "bundle_framework:libappexecfwk_common",
    "c_utils:utils",
    "common_event_service:cesfwk_innerkits",
    "ffrt:libffrt",
    "hilog:libhilog",
    "ipc:ipc_core",
  ]
}

group("unittest") {
  testonly = true

  deps = [ ":extract_insight_intent_profile_test" ]
}
