import("//build/test.gni")
import("//foundation/ability/ability_runtime/ability_runtime.gni")

module_output_path = "ability_runtime/ability_runtime/abilitymgr"

ohos_unittest("app_mgr_util_test") {
  module_out_path = module_output_path
  cflags_cc = []
  include_dirs = [
    "mock/include",
    "${ability_runtime_path}/services/abilitymgr/include",
    "${ability_runtime_path}/services/common/include",
    "${ability_runtime_services_path}/abilitymgr/include/utils",
  ]

  sources = [
    "${ability_runtime_services_path}/abilitymgr/src/utils/app_mgr_util.cpp",
    "mock/src/mock_my_flag.cpp",
    "mock/src/mock_sys_mgr_client.cpp",
    "app_mgr_util_test.cpp",
  ]

  configs = [ "${ability_runtime_services_path}/abilitymgr:abilityms_config" ]
  cflags = []
  if (target_cpu == "arm") {
    cflags += [ "-DBINDER_IPC_32BIT" ]
  }
  defines = []
  if (ability_runtime_graphics) {
    defines += [ "SUPPORT_GRAPHICS" ]
  }

  deps = []

  external_deps = [
    "ability_base:want",
    "bundle_framework:appexecfwk_base",
    "bundle_framework:appexecfwk_core",
    "c_utils:utils",
    "eventhandler:libeventhandler",
    "ffrt:libffrt",
    "googletest:gmock_main",
    "googletest:gtest_main",
    "hilog:libhilog",
    "ipc:ipc_core",
  ]
}

group("unittest") {
  testonly = true
  deps = [ ":app_mgr_util_test" ]
}
