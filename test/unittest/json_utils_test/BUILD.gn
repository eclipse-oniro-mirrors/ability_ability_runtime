import("//build/test.gni")
import("//foundation/ability/ability_runtime/ability_runtime.gni")

module_output_path = "ability_runtime/ability_runtime/json_utils"

ohos_unittest("json_utils_test") {
  module_out_path = module_output_path

  configs = [ "${ability_runtime_services_path}/common:common_config" ]

  if (target_cpu == "arm") {
    cflags = [ "-DBINDER_IPC_32BIT" ]
  }

  include_dirs =
      [ "${ability_runtime_path}/services/common/include" ]

  sources = [
    "${ability_runtime_path}/services/common/src/json_utils.cpp",
    "json_utils_test.cpp",
  ]

  external_deps = [
    "c_utils:utils",
    "config_policy:configpolicy_util",
    "googletest:gmock_main",
    "googletest:gtest_main",
    "hilog:libhilog",
    "hilog:libhilog",
    "json:nlohmann_json_static",
  ]
}

group("unittest") {
  testonly = true
  deps = [ ":json_utils_test" ]
}
