import("//build/test.gni")
import("//foundation/ability/ability_runtime/ability_runtime.gni")

module_output_path = "ability_runtime/ability_runtime/state_utils_test"

ohos_unittest("timeout_state_utils_test") {
  module_out_path = module_output_path

  configs = [
    "${ability_runtime_services_path}/abilitymgr:abilityms_config",
    "${ability_runtime_path}/utils/server/startup:startup_util_config",
  ]

  if (target_cpu == "arm") {
    cflags = [ "-DBINDER_IPC_32BIT" ]
  }

  sources = [
    "${ability_runtime_services_path}/abilitymgr/src/utils/timeout_state_utils.cpp",
    "timeout_state_utils_test.cpp",
  ]

  include_dirs = [
    "${ability_runtime_path}/utils/global/freeze/include"
  ]

  deps = []

  external_deps = [
    "ability_runtime:abilitykit_native",
    "bundle_framework:appexecfwk_base",
    "bundle_framework:appexecfwk_core",
    "c_utils:utils",
    "googletest:gmock_main",
    "googletest:gtest_main",
    "hilog:libhilog",
    "init:libbegetutil",
    "ipc:ipc_core",
    "hisysevent:libhisysevent",
    "background_task_mgr:bgtaskmgr_innerkits",
    "safwk:system_ability_fwk",
    "ffrt:libffrt"
  ]
}

group("unittest") {
  testonly = true
  deps = [ ":timeout_state_utils_test" ]
}
