import("//arkcompiler/ets_frontend/es2panda/es2abc_config.gni")
import("//build/ohos.gni")

es2abc_gen_abc("gen_embedded_ui_extension_ability_abc") {
  src_js = rebase_path("embedded_ui_extension_ability.js")
  dst_file = rebase_path(target_out_dir + "/embedded_ui_extension_ability.abc")
  in_puts = [ "embedded_ui_extension_ability.js" ]
  out_puts = [ target_out_dir + "/embedded_ui_extension_ability.abc" ]
  extra_args = [ "--module" ]
}

gen_js_obj("embedded_ui_extension_ability_js") {
  input = "embedded_ui_extension_ability.js"
  output = target_out_dir + "/embedded_ui_extension_ability.o"
}

gen_js_obj("embedded_ui_extension_ability_abc") {
  input =
      get_label_info(":gen_embedded_ui_extension_ability_abc",
                     "target_out_dir") + "/embedded_ui_extension_ability.abc"
  output = target_out_dir + "/embedded_ui_extension_ability_abc.o"
  dep = ":gen_embedded_ui_extension_ability_abc"
}

ohos_shared_library("embeddeduiextensionability_napi") {
  sanitize = {
    integer_overflow = true
    ubsan = true
    boundary_sanitize = true
    cfi = true
    cfi_cross_dso = true
    cfi_vcall_icall_only = true
    debug = false
  }
  branch_protector_ret = "pac_ret"

  sources = [ "embedded_ui_extension_ability_module.cpp" ]

  deps = [
    ":embedded_ui_extension_ability_abc",
    ":embedded_ui_extension_ability_js",
  ]

  external_deps = [ "napi:ace_napi" ]

  relative_install_dir = "module/app/ability"
  subsystem_name = "ability"
  part_name = "ability_runtime"
}
